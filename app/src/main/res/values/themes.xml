<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ProjectWMP" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#667eea</item>
        <item name="colorPrimaryDark">#764ba2</item>
        <item name="colorAccent">#03DAC5</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>

        <!-- Compatibility for AppCompat activities -->
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">false</item>
        <item name="android:windowBackground">@color/white</item>
    </style>

    <!-- NoActionBar theme for Splash -->
    <style name="Theme.ProjectWMP.NoActionBar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
        <item name="android:windowBackground">@color/white</item>
    </style>
</resources>